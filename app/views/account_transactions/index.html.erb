

<!DOCTYPE html>
<html>
<head>
  <title>Account Transactions</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-4">
    <h2 class="mb-4">Account Transactions</h2>
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">User Card</th>
          <th scope="col">Amount</th>
          <th scope="col">Merchant</th>
          <th scope="col">Transaction Type</th>
          <th scope="col">Date</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @account_transactions.each do |transaction| %>
          <tr>
            <th scope="row"><%= transaction.id %></th>
            <td><%= transaction.user_card_id %></td>
            <td>$<%= transaction.amount %></td>
            <td><%= transaction.merchant_id %></td>
            <td><%= transaction.transaction_type %></td>
            <td><%= transaction.transaction_date %></td>
            <td>
              <%= link_to "Show", account_transaction_path(transaction), class: "btn btn-primary btn-sm" %>
              <%= link_to "Delete", account_transaction_path(transaction), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </td>
              </tr>
              <% end %>
              </tbody>
              </table>
              <%= link_to "New Transaction", new_account_transaction_path, class: "btn btn-success" %>
              </div>
</body>
</html>
              
              
              
              