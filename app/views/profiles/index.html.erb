<h1 class="mb-4">Profiles</h1>

<div class="card shadow-sm mb-4">
  <div class="card-body">
    <table class="table table-hover">
      <thead class="table-light">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= profile.first_name %> <%= profile.last_name %></td>
            <td><%= profile.email %></td>
            <td><%= profile.phone_number %></td>
            <td>
              <%= link_to profile_path(profile), class: "btn btn-sm btn-outline-primary" do %>
                <i class="bi bi-eye"></i> View
              <% end %>
              <%= link_to edit_profile_path(profile), class: "btn btn-sm btn-outline-secondary" do %>
                <i class="bi bi-pencil"></i> Edit
              <% end %>
              <%= link_to profile, method: :delete, data: { confirm: "Are you sure you want to delete this profile?" }, class: "btn btn-sm btn-outline-danger" do %>
                <i class="bi bi-trash"></i> Delete
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @profiles.empty? %>
      <div class="text-center p-5">
        <p class="text-muted">No profiles found</p>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-end">
  <%= link_to new_profile_path, class: "btn btn-primary" do %>
    <i class="bi bi-plus-circle"></i> New Profile
  <% end %>
</div>