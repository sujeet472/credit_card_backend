

<div class="container mt-4">
  <h2 class="mb-3">Credit Cards</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Type of Card</th>
        <th>Credit Limit</th>
        <th>Created At</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @credit_cards.each do |card| %>
        <tr>
          <td><%= card.id %></td>
          <td><%= card.type_of_card %></td>
          <td>$<%= number_with_precision(card.credit_limit, precision: 2) %></td>
          <td><%= card.created_at.strftime("%Y-%m-%d") %></td>
          <td>
            <% if card.discarded_at.present? %>
              <span class="badge bg-danger">Discarded</span>
            <% else %>
              <span class="badge bg-success">Active</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
