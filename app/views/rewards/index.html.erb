<div class="container mt-4">
  <h2 class="mb-4">Rewards</h2>
  
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Reward ID</th>
        <th scope="col">Transaction ID</th>
        <th scope="col">User Card ID</th>
        <th scope="col">Points Earned</th>
        <th scope="col">Points Redeemed</th>
        <th scope="col">Last Updated</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @rewards.each do |reward| %>
        <tr>
          <td><%= reward.id %></td>
          <td><%= reward.account_transaction_id %></td>
          <td><%= reward.user_card_id %></td>
          <td><%= reward.points_earned %></td>
          <td><%= reward.points_redeemed %></td>
          <td><%= reward.last_updated %></td>
          <td>
            <%= link_to 'Show', reward_path(reward), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_reward_path(reward), class: 'btn btn-warning btn-sm' %>
            <%= button_to 'Delete', reward_path(reward), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'New Reward', new_reward_path, class: 'btn btn-success' %>
</div>
