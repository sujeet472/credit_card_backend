<!-- app/views/devise/sessions/new.html.erb -->
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4">Log In</h2>
          
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "your@email.com" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid mb-3">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
          
          <div class="text-center mt-3">
            <p class="mb-2">Don't have an account? 
              <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none" %>
            </p>
            
            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>